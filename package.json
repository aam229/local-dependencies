{
  "name": "local-dependencies",
  "description": "Install and watch local npm dependencies",
  "author": "Alexandre Massonneau <aam229@cornell.edu> (http://github.com/aam229)",
  "license": "MIT",
  "version": "1.0.0-alpha5",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aam229/local-dependencies.git"
  },
  "homepage": "git+https://github.com/aam229/local-dependencies",
  "main": "lib/index.js",
  "scripts": {
    "compile": "babel --presets es2015,stage-0,react --plugins transform-runtime src/ --out-dir lib/",
    "lint": "eslint -c .eslintrc src bin",
    "docs": "esdoc -c esdoc.json",
    "fix-lint": "eslint --fix -c .eslintrc src bin",
    "prepublish": "npm run compile && npm run lint",
    "watch": "npm-watch"
  },
  "watch": {
    "compile": "src/*"
  },
  "bin": {
    "configure-local-dependencies": "./bin/configure-local-dependencies.js",
    "install-local-dependencies": "./bin/install-local-dependencies.js",
    "watch-local-dependencies": "./bin/watch-local-dependencies.js"
  },
  "dependencies": {
    "chalk": "^1.1.1",
    "chokidar": "^1.4.2",
    "fs-extra": "^0.26.4",
    "inquirer": "^0.11.4",
    "inquirer-path": "^1.0.0-alpha2",
    "resolve": "^1.1.7"
  },
  "devDependencies": {
    "babel-cli": "6.4.0",
    "babel-core": "6.4.0",
    "babel-eslint": "5.0.0-beta6",
    "babel-loader": "6.2.1",
    "babel-plugin-react-transform": "2.0.0",
    "babel-plugin-transform-decorators-legacy": "1.3.4",
    "babel-plugin-transform-runtime": "6.4.3",
    "babel-plugin-typecheck": "3.6.1",
    "babel-preset-es2015": "6.3.13",
    "babel-preset-react": "6.3.13",
    "babel-preset-stage-0": "6.3.13",
    "esdoc": "^0.4.3",
    "esdoc-es7-plugin": "0.0.3",
    "eslint": "1.10.3",
    "eslint-config-airbnb": "0.1.1",
    "eslint-loader": "1.0.0",
    "eslint-plugin-import": "0.12.1",
    "eslint-plugin-react": "3.7.1",
    "npm-watch": "^0.1.1"
  },
  "engines": {
    "node": ">=4.1.1",
    "npm": ">=3.3.12"
  },
  "bugs": {
    "url": "https://github.com/aam229/local-dependencies/issues"
  }
}
